{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "types": [
      "node",
      "jest"
    ]
  },
  "paths": {
    "@/controllers/*": ["controllers/*"],
    "@/utils/*": ["utils/*"]
  },
  "include": [
    "./*",
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
