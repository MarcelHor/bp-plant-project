// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SensorData {
  id           String   @id @default(uuid())
  soilMoisture Float
  temperature  Float
  humidity     Float
  light        Float
  createdAt    DateTime @default(now())
}

model TimelapseData {
  id        String   @id @default(uuid())
  thumbnail String
  createdAt DateTime @default(now())
}

model emailSettings {
  id        String @id @default(uuid())
  cronTime  String
  subject   String
  recipient String
}

model plantSettings {
  id               String  @id @default(uuid())
  captureInterval  Int
  wateringDuration Int
  waterPlant       Boolean
}

model user {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model ApiKey {
  id         Int      @id @default(autoincrement())
  key        String   @unique
  usageCount Int      @default(0)
  lastUsed   DateTime @default(now())
  createdAt  DateTime @default(now())
}
